<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.example.hp.openwhen.Activitis.DetailFeeling">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="#000"
                android:layout_marginRight="15dp"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/feel_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeling"
                android:textColor="#000"
                android:layout_marginRight="15dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_feel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
               />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:inputType="number"
                android:maxLength="4"
                android:layout_marginRight="15dp"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:layout_marginRight="15dp"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_month"
                android:layout_width="0dp"
                android:inputType="number"
                android:maxLength="2"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TableRow android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:layout_marginRight="15dp"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_day"
                android:inputType="number"
                android:maxLength="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you say???"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_say"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TableRow>

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="#FFF3A7FC"
                android:src="@drawable/ic_delete" />

            <ImageButton
                android:id="@+id/update"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:background="#FFF3A7FC"
                android:src="@drawable/ic_update" />

        </TableRow>

    </TableLayout>
</LinearLayout>
